# Default options for our Kivy widgets

<Button>:
    color: 1, 1, 1, 1  # Text color (White)
    background_normal: './kv_files/images/Shades-of-Green_14.png'
    background_disabled_down: './kv_files/images/green_4.png'
    background_disabled_normal: './kv_files/images/green_5.png'
    background_down: './kv_files/images/green_6.png'
    border: (1, 1, 1, 1)
    pos_hint:{"center_x": 0.5, "center_y": 0.5}

<TextInput>:
    hint_text: 'Enter text'
    background_color: 0, 1, 0, 0.1  # Dark green background
    foreground_color: 1, 1, 1, 1  # White text
    font_size: 20

<PopUp>:
    spacing: 10
    padding: 10

<Label>:
    text_size: (self.width, None)
    halign: 'auto'
    valign: 'middle'
    ellipsis_options: {'color':(1,0.5,0.5,1),'underline':True}
    color: 1, 1, 1, 1  # White text
    font_size: 20

